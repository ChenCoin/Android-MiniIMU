<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/page1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/newpage1_title_fl"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="#0EA482"
        android:elevation="8dp">

        <TextView
            android:id="@+id/newpage1_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="8dp"
            android:text="我的传感器"
            android:textColor="@android:color/background_light"
            android:textSize="25sp" />

        <Button
            android:id="@+id/newpage1_bn_about"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_circle"
            android:text="!"
            android:textColor="#404040" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/newpage1_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/newpage1_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="没有连接传感器"
                android:textColor="#FFFFFF"
                android:visibility="visible" />

            <Button
                android:id="@+id/newpage1_button"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:background="@drawable/button_main"
                android:elevation="6dp"
                android:gravity="center"
                android:onClick="myButtonClick"
                android:text="连接"
                android:textColor="#4F4D4D"
                android:textSize="28sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/newpage1_jump"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:paddingBottom="10dp"
                android:paddingTop="32dp"
                android:text="点击进入设置"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/newpage1_setting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="invisible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/background_light"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:background="#0EA482"
                    android:elevation="8dp">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:background="@drawable/cir_pic" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:orientation="vertical"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:background="@drawable/item_line"
                        android:paddingBottom="5dp"
                        android:paddingLeft="5dp"
                        android:text="功能选项"
                        android:textColor="#A2A3A2"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/item_line"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1.0"
                            android:gravity="left|center"
                            android:paddingLeft="10dp"
                            android:text="音乐播放控制"
                            android:textColor="#000A00"
                            android:textSize="16sp" />

                        <Switch
                            android:id="@+id/switch1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:text="Switch" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/item_line"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1.0"
                            android:gravity="left|center"
                            android:paddingLeft="10dp"
                            android:text="电话接听拒接"
                            android:textColor="#000A00"
                            android:textSize="16sp" />

                        <Switch
                            android:id="@+id/switch2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:text="Switch" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/item_line"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1.0"
                            android:gravity="left|center"
                            android:paddingLeft="10dp"
                            android:text="紧急短信发送"
                            android:textColor="#000A00"
                            android:textSize="16sp" />

                        <Switch
                            android:id="@+id/switch3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:text="Switch" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:background="@drawable/item_line"
                        android:paddingBottom="5dp"
                        android:paddingLeft="5dp"
                        android:text="短信内容"
                        android:textColor="#A2A3A2"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/item_line"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1.0"
                            android:gravity="left|center"
                            android:paddingLeft="10dp"
                            android:text="拒接电话短信内容"
                            android:textColor="#000A00"
                            android:textSize="16sp" />

                        <Button
                            android:id="@+id/rejectBn_toPage2"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/button_circle"
                            android:text=">"
                            android:textColor="#696969" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/item_line"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1.0"
                            android:gravity="left|center"
                            android:paddingLeft="10dp"
                            android:text="紧急求救短信内容"
                            android:textColor="#000A00"
                            android:textSize="16sp" />

                        <Button
                            android:id="@+id/helpBn_toPage2"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/button_circle"
                            android:text=">"
                            android:textColor="#696969" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/newpage1_back"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:gravity="bottom|center"
                    android:paddingBottom="10dp"
                    android:text="点击返回主页"
                    android:textColor="#000A00"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/newpage1_about"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FDFCF9"
            android:gravity="top|center"
            android:orientation="vertical"
            android:padding="28dp"
            android:visibility="invisible">

            <TextView
                android:id="@+id/about_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_line"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:text="关于"
                android:textColor="#4F4D4D"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/about_context"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/app_about"
                android:textColor="#4F4D4D" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>